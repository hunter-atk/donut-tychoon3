<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h3>This is the edit page</h3>
    <%= employee.first_name %> <%= employee.last_name %>

    <form method="POST" action="/employees/<%= employee.id %>/edit?_method=PUT">
      <input type="text" name="first_name" placeholder="first name">
      <input type="text" name="last_name" placeholder="last name">
      <input type="email" name="email" placeholder="email">
      <input type="password" name="password" placeholder="password">
      <input type="integer" name="shop_id" placeholder="shop id">
      <input type="integer" name="favorite_donut" placeholder="favorite donut">
      <input type="submit" value="submit">
    </form>

  </body>
</html>
